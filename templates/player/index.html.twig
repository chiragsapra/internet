{% extends 'base.html.twig' %}

{% block title %}List of Players
{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
	<div class="alert alert-success">
		{{ message }}
	</div>
{% endfor %}


	<h2>List of Players</h2>
	<table class="table table-striped">
		<thead>
			<tr>
				<td>No.</td>
				<td>First Name</td>
				<td>Last Name</td>
				<td>Actions</td>
			</tr>
		</thead>
		<tbody>
			{% for player in players %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ player.getFirstName() }}</td>
					<td>{{ player.getLastName() }}</td>
					<td>
						<a href="{{ path('app_player_buy', {id: player.id}) }}">
							Buy
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

